<h1>Sign up</h1>
<div>
	<%= form_for(@user) do |f| %>
		<%= f.label :name %>
		<%= f.text_field :name %>

		<%= f.label :email %>
		<%= f.email_field :email %>

		<%= f.label :password %>
		<%= f.password_field :password %>

		<%= f.label :favorite_candy %>
		<%= f.text_field :favorite_candy %>

		<%= f.submit "Create my account" %>
	<% end %>
</div>